@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Danh sách phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/sanpham" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<h2 style="padding:10px">DANH SÁCH PHÂN QUYỀN</h2>
<div style="margin:10px">
    <button type="button" class="btn btn-outline-primary"> @Html.ActionLink("Create New", "Create", null, new { @class = "nav-link active" })</button>
</div>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            Tên Quyền
        </th>


        <th></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 1;
        foreach (var item in Model)
        {

            <tr>
                <td>
                    @i
                </td>
                <td>
                  @item.Name
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update" @*new { masp = item.MASP }*@) |
                    @Html.ActionLink("Details", "Details" @*new { masp = item.MASP }*@) |
                    @Html.ActionLink("Delete", "Delete" @*new { masp = item.MASP }*@)
                </td>

            </tr>
            i++;
        }
    }
    


</table>

